<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" creationComplete="application1_creationCompleteHandler(event)" minWidth="300" minHeight="550" xmlns:gateway="services.gateway.*" pageTitle="Cloud Media Tools">
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.core.FlexGlobals;
			import mx.events.FlexEvent;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			import services.gateway.Gateway;
			
			import spark.components.VSlider;
			
			public 	var gateway:Gateway = new Gateway;
			
			[Bindable]
			public var gatewayUri:String = new String();
			[Bindable]
			public var videoAddr:String = new String();
			[Bindable]
			public var contentIdsArray:Array;
			[Bindable]
			public var contentVideoUrlsArray:Array;
			[Bindable]
			public var Uris:String =  new String();
			
			protected function button_clickHandler(event:MouseEvent):void
			{
				IWannaWriteResult.token = gateway.IWannaWrite(parseInt(contentIdTextInput.text));
			}
			
			protected function button0_clickHandler(event:MouseEvent):void
			{
				var arrc:Array = new Array();
				arrc = String(contentIdsTextInput.text).split(/,/);
				IWannaReadResult.token = gateway.IWannaRead(arrc);
			}
			
			
			protected function buttonConnect_clickHandler(event:MouseEvent):void
			{
				gateway = new Gateway;
				gateway.addEventListener(FaultEvent.FAULT, gatewayInactive);		
				gatewayUri = GatewayTextInput.text  + "?wsdl";
				gateway.serviceStart(gatewayUri);
				gateway.showBusyCursor = true;
				
			}
			protected function gatewayInactive(event:FaultEvent):void{
				textArea.text += " Был указан адресс ядрышка. По данному адресу ядрышко не пашет";
			}
			

			protected function application1_creationCompleteHandler(event:FlexEvent):void
			{
				for (var s:String in FlexGlobals.topLevelApplication.parameters)
				{
					switch (s)
					{
						case "videourl":
							var videourlString:String = FlexGlobals.topLevelApplication.parameters[s]  as String;
							videoAddr = videourlString;
							textArea.text += " \n ПРИНЯТЫЙ ОТ HTML Video URL: " + videoAddr;
							break;
						case "url":
							var urlString:String = FlexGlobals.topLevelApplication.parameters[s]  as String;
							urlString += "?wsdl";
							gatewayUri = urlString;
							textArea.text += " \n ПРИНЯТЫЙ ОТ HTML Wsdl Url: " + gatewayUri;							
							break;
						case "sid":
							textArea.text += " \n ПРИНЯТАЯ СТРОКА Cloud Observer Content IDs: " + FlexGlobals.topLevelApplication.parameters[s];
							contentIdsArray = String(FlexGlobals.topLevelApplication.parameters[s]).split(/,/);
							break;
						default:
							textArea.text += " \n остальные посланные аргументы: " + s + " " + FlexGlobals.topLevelApplication.parameters[s] + "; ";
							break;
					}
				}
				if (videoAddr.length >= 8) {
					PV(videoAddr);
				} else {
					textArea.text += " Не был указан адресс откуда играть видео.";
				}
				if (gatewayUri.length >= 12) {
					gateway = new Gateway;
					gateway.showBusyCursor = true;
					gateway.serviceStart(gatewayUri);
					gateway.addEventListener(FaultEvent.FAULT, gatewayInactive);
					IWannaReadResult.token = gateway.IWannaRead(contentIdsArray);
				} else {
					textArea.text += " Не был указан адресс ядрышка.";
				}
			}
			public function PV(streamUri:String):void{
				VideoTextInput0.text = streamUri;
				VideoBox.source = streamUri;
				VideoBox.play();
			}


			protected function IWannaReadResult_resultHandler(event:ResultEvent):void
			{
				Uris = event.result as String;
				textArea.text +=  " \n Принятые Video Uri's: " + Uris;
				contentVideoUrlsArray = String(Uris).split(/,/);
				for ( var i:String in contentVideoUrlsArray){
					var streamUri:String = new String();
					streamUri = contentVideoUrlsArray[i].toString();
					trace(streamUri);
					if (streamUri.length >= 8) {
						PV(streamUri);					
					}
				
				}
			}


			protected function buttonPlay_clickHandler(event:MouseEvent):void
			{
				PV(VideoTextInput0.text);
			}

		]]>
	</fx:Script>
