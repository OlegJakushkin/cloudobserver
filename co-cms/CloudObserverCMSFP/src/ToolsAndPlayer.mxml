			<s:TextInput id="VideoTextInput0" text="http://localhost:8080/stream.flv" width="100%"/>
		</mx:FormItem>
		<s:Button label="Play" id="buttonPlay" click="buttonPlay_clickHandler(event)"/>
	</mx:Form>
</s:Application>
