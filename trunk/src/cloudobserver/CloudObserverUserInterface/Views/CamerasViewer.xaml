<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:local="clr-namespace:CloudObserverUserInterface" xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
	xmlns:Blacklight_Controls="clr-namespace:Blacklight.Controls;assembly=Blacklight.Controls"
	x:Class="CloudObserverUserInterface.CamerasViewer"
	d:DesignWidth="640" d:DesignHeight="480">

	<StackPanel x:Name="StackPanel" Margin="0">
		<Button x:Name="ButtonAddCamera" Click="ButtonAddCamera_Click" Content="Add Camera" Margin="8,8,0,0" HorizontalAlignment="Left" Width="188"/>
		<controlsToolkit:WrapPanel Margin="8,8,8,0"/>
		<ScrollViewer x:Name="ScrollViewer" Margin="8,0,8,-255" VerticalScrollBarVisibility="Auto">
			<Blacklight_Controls:DragDockPanelHost MinimizedColumnWidth="300" MinimizedRowHeight="300"  x:Name="WrapPanelCameras" MaxColumns="3" Height="300" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
		</ScrollViewer>
	</StackPanel>
</UserControl>