<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="CloudObserverUserInterface.CameraViewer"
	d:DesignWidth="640" d:DesignHeight="480">

	<Grid x:Name="LayoutRoot">
		<TextBox x:Name="UserIDTextBox" Height="33" Margin="8,48,0,0" VerticalAlignment="Top" Text="UserID" TextWrapping="Wrap" HorizontalAlignment="Left" Width="219"/>
		<TextBox x:Name="CameraIDTextBox" Height="33" Margin="8,85,0,0" VerticalAlignment="Top" Text="CameraID" TextWrapping="Wrap" HorizontalAlignment="Left" Width="219"/>
		<TextBox x:Name="UIDTextBox" Height="33" Margin="8,122,0,0" VerticalAlignment="Top" Text="UID" TextWrapping="Wrap" HorizontalAlignment="Left" Width="219"/>
		<Button x:Name="StartButton" Click="StartButton_Click" Height="33" HorizontalAlignment="Left" Margin="8,159,0,0" VerticalAlignment="Top" Width="100" Content="Start"/>
		<Button x:Name="StopButton" Click="StopButton_Click" Height="33" HorizontalAlignment="Left" Margin="127,159,0,0" VerticalAlignment="Top" Width="100" Content="Stop"/>
		<Image x:Name="ImageBox" HorizontalAlignment="Left" Margin="8,196,0,134" Width="219"/>
	</Grid>
</UserControl>