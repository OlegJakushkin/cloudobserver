<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input"
	x:Class="CloudObserverUserInterface.CameraViewer"
	d:DesignWidth="640" d:DesignHeight="480">

	<Grid x:Name="LayoutRoot">
		<dataInput:Label x:Name="LabelCameraID" HorizontalAlignment="Left" Margin="8,8,0,0" VerticalAlignment="Top" Content="CameraID:"/>
		<TextBox x:Name="TextBoxCameraID" Margin="8,24,0,0" VerticalAlignment="Top" Text="CameraID" TextWrapping="Wrap" HorizontalAlignment="Left" Width="204"/>
		<Button x:Name="ButtonStart" Click="ButtonStart_Click" HorizontalAlignment="Left" Margin="8,52,0,0" VerticalAlignment="Top" Width="100" Content="Start"/>
		<Button x:Name="ButtonStop" Click="ButtonStop_Click" HorizontalAlignment="Left" Margin="112,52,0,0" VerticalAlignment="Top" Width="100" Content="Stop"/>
		<Image x:Name="ImageFrame" HorizontalAlignment="Left" Margin="8,78,0,0" Width="204" Height="152" VerticalAlignment="Top"/>
	</Grid>
</UserControl>