<UserControl x:Class="CloudObserver.Gui.Controls.SpinningWait"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="16" Width="16">
    <Canvas>
        <Canvas x:Name="canvasSpinner" Height="16" RenderTransformOrigin="0.5,0.5" Width="16">
            <Line Opacity="0" Stroke="Gray" StrokeThickness="2" X1="12" X2="16" Y1="8" Y2="8" />
            <Line Opacity="0.0833333333333333" Stroke="Gray" StrokeThickness="2" X1="11.4641016151378" X2="14.9282032302755" Y1="10" Y2="12" />
            <Line Opacity="0.166666666666667" Stroke="Gray" StrokeThickness="2" X1="10" X2="12" Y1="11.4641016151378" Y2="14.9282032302755" />
            <Line Opacity="0.25" Stroke="Gray" StrokeThickness="2" X1="8" X2="8" Y1="12" Y2="16" />
            <Line Opacity="0.333333333333333" Stroke="Gray" StrokeThickness="2" X1="6" X2="4" Y1="11.4641016151378" Y2="14.9282032302755" />
            <Line Opacity="0.416666666666667" Stroke="Gray" StrokeThickness="2" X1="4.53589838486224" X2="1.07179676972449" Y1="10" Y2="12" />
            <Line Opacity="0.5" Stroke="Gray" StrokeThickness="2" X1="4" X2="0" Y1="8" Y2="8" />
            <Line Opacity="0.583333333333333" Stroke="Gray" StrokeThickness="2" X1="4.53589838486224" X2="1.07179676972449" Y1="6" Y2="4" />
            <Line Opacity="0.666666666666667" Stroke="Gray" StrokeThickness="2" X1="6" X2="4" Y1="4.53589838486225" Y2="1.07179676972449" />
            <Line Opacity="0.75" Stroke="Gray" StrokeThickness="2" X1="8" X2="8" Y1="4" Y2="0" />
            <Line Opacity="0.833333333333333" Stroke="Gray" StrokeThickness="2" X1="10" X2="12" Y1="4.53589838486225" Y2="1.07179676972449" />
            <Line Opacity="0.916666666666667" Stroke="Gray" StrokeThickness="2" X1="11.4641016151378" X2="14.9282032302755" Y1="6" Y2="4" />
            <Canvas.RenderTransform>
                <RotateTransform Angle="0"/>
            </Canvas.RenderTransform>
            <Canvas.Triggers>
                <EventTrigger RoutedEvent="Canvas.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation From="0" RepeatBehavior="Forever" Storyboard.TargetProperty="(Canvas.RenderTransform).(RotateTransform.Angle)" To="360" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Canvas.Triggers>
        </Canvas>
        <Image x:Name="imageResult" Height="16" Width="16" />
    </Canvas>
</UserControl>