<Window x:Class="CloudObserverWriterClient.WindowMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="145" ResizeMode="CanMinimize" Title="Cloud Observer Writer Client [H.264 (x264 codec) + MP3 (LAME codec) + Matroska]" Width="600">
	<Grid>
		<TextBlock HorizontalAlignment="Left" Margin="8,11,0,0" Text="Video Source:" VerticalAlignment="Top" />
		<ComboBox x:Name="comboBoxVideoSources" IsEnabled="False" Margin="90,8,8,0" VerticalAlignment="Top" />
		<TextBlock HorizontalAlignment="Left" Margin="8,37,0,0" Text="Audio Source:" VerticalAlignment="Top" />
		<ComboBox x:Name="comboBoxAudioSources" IsEnabled="False" Margin="90,34,8,0" VerticalAlignment="Top" />
		<TextBlock HorizontalAlignment="Left" Margin="8,63,0,0" Text="Target File:" VerticalAlignment="Top" />
		<TextBox x:Name="textBoxTargetFile" IsReadOnly="True" Margin="90,60,87,0" Text="Camera.mkv" VerticalAlignment="Top" />
		<Button x:Name="buttonBrowse" Click="buttonBrowse_Click" Content="Browse" HorizontalAlignment="Right" Margin="0,60,8,0" VerticalAlignment="Top" Width="75" />
		<Button x:Name="buttonCapture" Click="buttonCapture_Click" Content="Start Capture" Margin="8,90,8,0" VerticalAlignment="Top" />
	</Grid>
</Window>